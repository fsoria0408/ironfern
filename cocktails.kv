            text: "Cocktail Strength (%)"
            size_hint: 0.6,0.3
            pos_hint: {"x":0.05, "top":0.56}
            font_size: 20
        TextInput:
            id: cocktailCon
            size_hint: 0.3,0.07
            pos_hint: {"x":0.5, "top":0.45}
            multiline: False
    
        Button:
            text: "Calculate"
            size_hint: 0.3,0.07
            pos_hint: {"x":0.5, "top":0.3}
