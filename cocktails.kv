<MainWindow>:
    cocktailVol: cocktailVol
    spiritCon: spiritCon
    cocktailCon: cocktailCon

    FloatLayout:

        Label:
            text: "Cocktail Math"
            size_hint: 0.6,0.3
            pos_hint: {"x":0.2, "top":0.91}
            font_size: 30

        Label:
            text: "Cocktail Volume (ml)"
            size_hint: 0.6,0.3
